<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chrisjerico.jubecermobileapplication.Profile">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/request"
        android:id="@+id/imgRequest"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_alignTop="@+id/imgResignation"
        android:layout_alignStart="@+id/imgAnnouncement" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/letter"
        android:id="@+id/imgResignation"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_marginTop="103dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/announcement"
        android:id="@+id/imgAnnouncement"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginTop="45dp"
        android:onClick="onClicked"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView1"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/profile"
        android:id="@+id/imgProfile"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/imgResignation" />

    <TextView
        android:text="ANNOUNCEMENTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imgAnnouncement"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <TextView
        android:text="RESIGNATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imgResignation"
        android:layout_alignStart="@+id/imgResignation" />

    <TextView
        android:text="LEAVE REQUEST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imgRequest"
        android:layout_alignEnd="@+id/textView1" />

    <TextView
        android:text="PROFILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignEnd="@+id/imgProfile"
        android:layout_marginEnd="14dp" />



</RelativeLayout>