<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="[Leave Request]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="D A T E :"
        android:textSize="20dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView48" />


    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView36"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="S E N D"
        android:layout_alignBaseline="@+id/btnback"
        android:layout_alignBottom="@+id/btnback"
        android:layout_alignEnd="@+id/editText3" />
    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="B A C K"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView36" />
    <Button
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set start date"
        android:textSize="20dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView36"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <Button
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set end date"
        android:textSize="20dp"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/textView44"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R E A S O N"
        android:textSize="20dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:ems="10"
        android:hint="Type your reason here...."
        android:inputType="textPersonName"
        android:layout_below="@+id/textView49"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textSize="20dp"
        android:editable="false"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/editText5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textSize="20dp"
        android:editable="false"
        android:layout_alignTop="@+id/textView48"
        android:layout_alignParentEnd="true" />


</RelativeLayout>