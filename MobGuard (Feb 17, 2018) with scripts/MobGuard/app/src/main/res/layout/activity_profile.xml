<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chrisjerico.jubecermobileapplication.Profile">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/request"
        android:id="@+id/imgRequest"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imgProfile" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/profile"
        android:id="@+id/imgProfile"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView52" />






    <ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/establishments"
    android:id="@+id/imgEstablishment"
    android:adjustViewBounds="false"
    android:background="@android:color/transparent"
    android:scaleType="fitCenter"
        android:onClick="onClicked"
        android:layout_alignTop="@+id/imgProfile"
        android:layout_alignStart="@+id/imgAddguard" />

    <ImageButton
        android:id="@+id/imgAddguard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/adduser"
        android:onClick="onClicked"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imgRequest"
        android:layout_alignEnd="@+id/textView51"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imgProfile"
        android:layout_alignStart="@+id/imgProfile"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTABLISHMENTS"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imgEstablishment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICE REQUEST"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_marginTop="100dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/imgRequest"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD GUARD"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/textView52"
        android:layout_alignStart="@+id/imgAddguard" />


</RelativeLayout>















